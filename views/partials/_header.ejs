<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <% if (user) { %>
          <p class="nav-item text-light mt-2 mr-2">Welcome, <%= user.email %>!</p>
          <form method="POST" action="/logout" class="form-inline my-2 my-lg-0">
            <button type="submit" class="btn btn-outline-light my-2 my-sm-0">Logout</button>
          </form>
        <% } else { %>
          <form method="POST" action="/login" class="form-inline my-2 my-lg-0">
            <input type="text" name="username" class="form-control mr-sm-2" placeholder="Username">
            <button type="submit" class="btn btn-outline-light my-2 my-sm-0">Login</button>
          </form>
        <% } %>
      </div>
    </div>
  </nav>
</header>
